<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    >
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        tools:context=".RadarMultiDetectActivity"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="detect status:"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:background="#dddfe6"/>
        <TextView
            android:id="@+id/show_room1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/textView"

            android:text="show your id info"
            android:textSize="18sp"
            android:fontFamily="monospace" />


        <TextView
            android:id="@+id/show_room2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/show_room1"
            android:text="show your id info"
            android:textSize="18sp"
            android:fontFamily="monospace" />


        <TextView
            android:id="@+id/show_room3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/show_room2"
            android:text="show your id info"
            android:textSize="18sp"
            android:fontFamily="monospace" />


        <TextView
            android:id="@+id/show_room4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/show_room3"
            android:text="show your id info"
            android:textSize="18sp"
            android:fontFamily="monospace" />
        <ImageButton
            android:id="@+id/receive_bt"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="20dp"
            android:layout_toLeftOf="@id/stop_recv"
            android:layout_below="@id/show_room4"
            android:scaleType="fitCenter"
            android:src="@drawable/received"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/stop_recv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/show_room4"
            android:src="@drawable/disconnect"
            android:background="@null"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/stop_recv"
            android:text="detect status:"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:background="#dddfe6"/>
        <TextView
            android:id="@+id/printfTextView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/textView2"
            android:text="printf"
            android:textSize="18sp"
            android:fontFamily="monospace" />




    </RelativeLayout>
</ScrollView>