<?xml version="1.0" encoding="utf-8"?>
<!--
RelativeLayout教學：
https://www.viralandroid.com/2015/09/android-relative-layout-example.html
    -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        tools:context=".MainActivity"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="speed thershold"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:background="#dddfe6"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:text="recent thers:"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:layout_toRightOf="@id/textView2"
            android:layout_alignParentRight="true"
            android:text="..."
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:background="#ffffff"/>
        <SeekBar
            android:id="@+id/speedThers"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/textView3"
            android:max="42"
            android:progress="42"
            android:secondaryProgress="1"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/speedThers"
            android:text="direction detect"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:background="#dddfe6"/>
        <CheckBox
            android:id="@+id/chk1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:text="all"
            android:textSize="18sp" />
        <CheckBox
            android:id="@+id/chk2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chk1"
            android:text="apart"
            android:textSize="18sp" />
        <CheckBox
            android:id="@+id/chk3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chk2"
            android:text="depart"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chk3"
            android:text="Doppler freq detect(預留@Alex)"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:background="#dddfe6"/>
        <SeekBar
            android:id="@+id/freqThers"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/textView5"
            android:max="42"
            android:progress="21"
            android:secondaryProgress="1"/>
        <ImageButton
            android:id="@+id/sendBackMain"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/freqThers"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/addnew" />
    </RelativeLayout>
</ScrollView>